{% extends 'oneshot/layouts/layout.three.html.twig' %}



{% block layout_content %}

{{ form_start(form) }}
{% if errors %}
<div class="c-error">
  <ul>
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}

<div class="form-group">
  {% if user.image %}
    <div class="container-img">
      <div class="crop">
        <img src="{{ fburi }}{{ user.image.path }}" />
      </div>
    </div>
  {% endif %}

  <label for="InputImage">{{ form_label(form.image_profile) }}</label>
  <div class="input-group">
    {{ form_widget(form.image_profile, {'attr': {'class': 'form-control'}}) }}
  </div>
</div>

<div class="form-group">
  <label for="InputMail">{{ form_label(form.mail) }}</label>
  <div class="input-group">
    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'value': user.mail}}) }}
  </div>
</div>

<div class="form-group">
  <label for="InputName">{{ form_label(form.name) }}</label>
  <div class="input-group">
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'value': user.name}}) }}
  </div>
</div>
{% if form.roles is defined %}
  <div class="form-group">
    <label for="InputRoles">{{ form_label(form.roles) }}</label>
      {{ form_widget(form.roles ) }}
  </div>
{% endif %}
<input type="hidden" name="token" value="{{ csrf_token('user-singin') }}"/>
{{ form_row(form.submit, { 'label': 'Update', attr: {'class': 'btn wow tada btn-embossed btn-primary pull-right animated animated', 'style': 'visibility: visible;'} }) }}
{{ form_end(form) }}

{% endblock %}
{% extends 'oneshot/layouts/layout.three.html.twig' %}

{% block layout_content %}

{{ form_start(form) }}
{% if errors %}
<div class="c-error">
  <ul>
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}

<div class="form-group">
   <label for="InputName">{{ form_label(form.name) }}</label>
   <div class="input-group">
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': "Enter name"}}) }}
  </div>
</div>  
<div class="form-group">
  <label for="InputMail">{{ form_label(form.mail) }}</label>
  <div class="input-group">
    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'rows': 20}}) }}
  </div>
</div>
  <div class="form-group">
  <label for="InputPassword">{{ form_label(form.password) }}</label>
  <div class="input-group">
    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'rows': 20}}) }}
    </div>
</div>
{{ form_row(form.submit, { 'label': 'Sing Up', attr: {'class': 'btn wow tada btn-embossed btn-primary pull-right animated animated', 'style': 'visibility: visible;'} }) }}
{{ form_end(form) }}

{% endblock %}
{% extends 'oneshot/layouts/layout.three.html.twig' %}



{% block layout_content %}

{{ form_start(form) }}

{% if error %}
<div class="c-error"><ul><li>{{ error }}</li></ul></div>
{% endif %}

<div class="form-group">
  <label for="InputMail">{{ form_label(form.mail) }}</label>
  <div class="c-error">{{ form_errors(form.mail) }}</div>
  <div class="input-group">
    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'rows': 20}}) }}
  </div>
</div>

<div class="form-group">
  <label for="InputPassword">{{ form_label(form.password) }}</label>
  <div class="c-error">{{ form_errors(form.password) }}</div>
  <div class="input-group">
    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'rows': 20}}) }}
  </div>
</div>
<input type="hidden" name="token" value="{{ csrf_token('user-singin') }}"/>
{{ form_row(form.submit, { 'label': 'Sing In', attr: {'class': 'btn wow tada btn-embossed btn-primary pull-right animated animated', 'style': 'visibility: visible;'} }) }}
{{ form_end(form) }}

{% endblock %}


{% block scripts %}
  <script src="https://cdn.ckeditor.com/ckeditor5/35.4.0/super-build/ckeditor.js"></script>
{% endblock %}

{% block layout_content %}

	<div class="row">
    <div class="post-form">
      {{ form_start(form) }}
        <div class="col-md-9">
        
          {% if errors %}
            <div class="c-error">
              <ul>
                {% for error in errors %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          <div class="form-group">
            <div class="input-group">
              {{ form_widget(form.title) }}
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              {{ form_widget(form.body, {'attr': {'class': 'form-control', 'rows': 20}}) }}
            </div>
          </div>

        </div>

        <div class="col-md-3">
          {{ form_widget(form.submit, { 'label': 'Send', attr: {'class': 'btn btn-primary', 'style': 'visibility: visible;'} }) }}

          <div class="form-group">
            <div class="input-group">
              {{ form_widget(form.tags, {'attr': {'data-placeholder': '+ Add tag' ,'class': 'form-control'}}) }}
            </div>
          </div>
        </div>
      {{ form_end(form) }}
      
    </div>
  </div>
{% endblock %}